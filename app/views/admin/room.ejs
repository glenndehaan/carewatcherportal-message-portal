<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body>
        <% include ../partials/header.ejs %>
        <div class="container">
        <main>
            <div class="row">
                <div class="col s12 m6">
                    <div class="card">
                        <div class="card-image">
                            <img sizes="500" src="\images\room.png">
                            <span class="card-title black-text"></span>
                            <a class="btn-floating halfway-fab waves-effect waves-light red" href="/admin/room/create"><i class="material-icons">add</i></a>
                        </div>
                        <div class="card-content">
                            <h4>Assign a Room:</h4>

                            <p>Click on the plus to assign a client to a room number</p>


                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m6">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Rooms in use</span>
                                <ul id="rooms">
                                    <% rooms.forEach((room) => { %>
                                    <li>Room number: <%= room.id %> Client: <%= room.client_name %> - <a href="/admin/room/edit/<%= room.id %>">Edit</a> - <a href="/admin/room/delete/<%= room.id %>">Delete</a></li>
                                    <% }); %>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </main>
        </div>
        <% include ../partials/footer.ejs %>
    </body>
</html>
